extends ./layout.jade
block content
	form(action="/users", method="POST")
		div(class='form-group')
			label(for="email") Email
			input(class="form-control" type="text", name="email", placeholder="Email", id="email")
		div
			label(for="password") Password
			input(class="form-control" type="password", name="password", placeholder="Email", id="password")

		div
			input(type="submit" value="Sign in", class="btn btn-info")
